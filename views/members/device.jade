include ../mixins

#ip_container.center
    p <b>{{device_name}}</b> last updated ip is
    div.display_ip
        img(src="/images/ip.png", id="ip_image", alt="ip")
        span 192.168.0.2
    p updated on {{device_ip_last_updated}} {{timezone}}
    hr

div.table-responsive
    table.table.table-hover
        thead
            tr
                th #
                th IP
                th Check-in
        tbody
            tr(ng-repeat="x in logdata")
                td {{x.ordering_number}}
                td {{x.ip}}
                td {{x.timestamp}}
    div.center {{message}}
br
br
div.panel.panel-default
    +panelHeader("Device info")
    div.panel-body
        p.no-margin <b>Device Key</b>: {{device_key}}
        p.no-margin <b>Registered on</b>: {{registered}}